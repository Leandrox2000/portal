{% import "fields.html.twig" as fields %}
{% import "table.html.twig" as tables %}
{% import "buttons.html.twig" as buttons %}

<div class="centercontent">

    <div class="pageheader notab">
        <h1 class="pagetitle">{{ titlePage }}</h1>
        {{ permissoes['DICIO_INSERIR'] ? buttons.iconButton("Inserir novo", "dicionarioPatrimonioCultural/form", "no_icon", "green") : ""}}
        <br clear="all">
    </div><!--pageheader-->

    <div id="contentwrapper" class="contentwrapper">

        <div class="subcontent">
            {{ tables.table([
                    tables.head([
                            tables.columnHeader(fields.checkboxHeader()),
                            tables.columnHeader([
                                    permissoes['DICIO_PUBLI'] ? buttons.iconButton("Publicar", "javascript:alterarStatus(1)", "no_icon") : "",
                                    permissoes['DICIO_NOPUBLI'] ? buttons.iconButton("NÃ£o publicar", "javascript:alterarStatus(0)", "no_icon") : "",
                                    permissoes['DICIO_EXCLUIR'] ? buttons.iconButton("Excluir", "javascript:excluir()", "no_icon") : "",
                                    "&nbsp;&nbsp;&nbsp;&nbsp; Data ", 
                                    fields.date("dataInicial", "", "", ""),
                                    "&nbsp;&nbsp;", 
                                    fields.date("dataFinal", "", "", ""), "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;",
                            ] | join, "90%"),
                            tables.columnHeader([
                                    fields.select("status", status, "", "Todos os Status"),
                            ] | join, "10%")
                        ])
                    ] | join,
            "dicionario") }}
        </div>

    </div><!--contentwrapper-->

    <br clear="all" />

</div>