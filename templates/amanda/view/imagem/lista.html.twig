{% import "fields.html.twig" as fields %}
{% import "table.html.twig" as tables %}
{% import "buttons.html.twig" as buttons %}

<div class="centercontent">
    <div>
        <div class="pageheader notab">
            <h1 class="pagetitle">{{ titlePage }}</h1>
            {{ permissoes['IMAGE_INSERIR'] ? buttons.iconButton("Inserir novo", "imagem/form", "no_icon", "green") : ""}}
            <br clear="all">
        </div><!--pageheader-->

        <div id="contentwrapper" class="contentwrapper">
            <div class="subcontent">
                {{ tables.table(
                            [
                            tables.head([
                                            tables.columnHeader(fields.checkboxHeader()),
                                            tables.columnHeader([
                                                                permissoes['IMAGE_EXCLUIR'] ? buttons.iconButton("Excluir", "javascript:excluir()", "no_icon excluir") : "",
                                                                "&nbsp;&nbsp;&nbsp;&nbsp; Data ", 
                                                                fields.date("data_inicial", "", "", ""),
                                                                "&nbsp;&nbsp;", 
                                                                fields.date("data_final", "", "", ""),
                                                                "&nbsp;&nbsp;&nbsp;&nbsp;", 
                                                                fields.select("categoria", categorias, "", "Todas as categorias"),
                                                                "&nbsp;&nbsp;&nbsp;&nbsp;", 
                                                                fields.select("pastas", pasta, "", "Todas as pastas")
                                                            ]|join, "100%"),
                                        ])
                            ]|join,
                    "imagens") }}

            </div>
        </div><!--contentwrapper-->

        <br clear="all" />
    </div>
</div>