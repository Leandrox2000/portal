{% import "fields.html.twig" as fields %}
{% import "table.html.twig" as tables %}
{% import "buttons.html.twig" as buttons %}

<div class="centercontent">

    <div class="pageheader notab">
        <h1 class="pagetitle">{{titlePage}}</h1>
        {{ permissoes['UNIDA_INSERIR'] ? buttons.iconButton("Inserir novo", "unidade/form", "no_icon", "green") : ""}}
        <br clear="all">
    </div><!--pageheader-->

    <div id="contentwrapper" class="contentwrapper">

        <div class="subcontent">
            
              {{ tables.table(
                            [
                            tables.head([
                                            tables.columnHeader(fields.checkboxHeader()),
                                            tables.columnHeader([
                                                                    permissoes['UNIDA_EXCLUIR'] ? buttons.iconButton("Excluir", "javascript:excluir()", "no_icon") : "",
                                                                    permissoes['UNIDA_ALTPOS'] ? buttons.iconButton("Salvar posicionamento", "javascript:salvarPosicionamentoUnidade()", "no_icon") : "",
                                                                    "&nbsp;&nbsp;&nbsp;&nbsp; Data ", 
                                                                    fields.date("dataInicial", "", "", ""),
                                                                    "&nbsp;&nbsp;", 
                                                                    fields.date("dataFinal", "", "", ""), "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;",
                                                                ]|join,
                                                    "90%")
                                        ])
                            ]|join,
                    "unidades") }}
          

        </div>

    </div><!--contentwrapper-->

    <br clear="all" />

</div>