{% import "fields.html.twig" as fields %}
{% import "table.html.twig" as tables %}
{% import "buttons.html.twig" as buttons %}

<div class="pageheader notab">
    <h1 class="pagetitle">Selecionar Fototecas</h1>
</div><!--pageheader-->

<div id="contentwrapper" class="contentwrapper">
    <div class="subcontent">
        {{ tables.table([
            tables.head([
                tables.columnHeader('<input type="checkbox" value="" class="checkall" /> '),
                tables.columnHeader([
                    buttons.iconButton("Nova Fototeca", "javascript:fototecasModalObject.nova()", "no_icon Nova imagem"),
                    buttons.iconButton("Atualizar Lista", "javascript:fototecasModalObject.atualizar()", "no_icon Atualizar Lista"),
                ] | join, "100%"),
            ])
        ] | join, "fototecasRelacionadasModal") }}

        <form id="frm" class="stdform stdform2"  >
            {{  buttons.iconButton("Escolher e fechar", "javascript:fototecasModalObject.escolherFechar()", "no_icon")  }}
            {{  buttons.iconButton("Fechar", "javascript:fototecasModalObject.fechar()", "no_icon")  }}
        </form>

    </div>
</div><!--contentwrapper-->
