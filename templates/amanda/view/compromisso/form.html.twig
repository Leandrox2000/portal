{% import "fields.html.twig" as forms %}
{% import "tabs.html.twig" as tabs %}
{% import "buttons.html.twig" as buttons %}

<div class="centercontent">
                
    <div class="pageheader notab">
        <h1 class="pagetitle">{{ titlePage }}</h1>
    </div><!--pageheader-->

    <div id="contentwrapper" class="contentwrapper">

        <div class="subcontent">
            <form id="frm" class="stdform stdform2" action="compromisso/salvar" method="{{ method }}">
                {{ forms.field("Data e Hora Publicação:", [
                            forms.date("dataInicial", compromisso.getDataInicial() ? compromisso.getDataInicial().format('d/m/Y') : data.format('d/m/Y') , "Data Inicial", "date periodo"), 
                            forms.time("horaInicial", compromisso.getDataInicial() ? compromisso.getDataInicial().format('H:i') : hora.format('H:i'), "Hora inicial", "hora smallinput periodo")
                         ]|join 
                   )
                }}
                {{ forms.field("Data e Hora Despublicação:", [
                            forms.date("dataFinal", compromisso.getDataFinal().format('d/m/Y') , "Período final", "date periodo"), 
                            forms.time("horaFinal", compromisso.getDataFinal().format('H:i') , "Hora final", "hora smallinput periodo")
                          ]|join 
                    )
                }}
                
                {{ forms.field("Assunto:", forms.text("titulo", compromisso.getTitulo(), "Título", null, null, null, 100) ) }}
                
                {{ forms.field("Data do Compromisso:", [
                            forms.date("compromissoDtInicial", compromisso.getCompromissoInicial().format('d/m/Y') , "Data Inicial", "date periodo"), 
                            forms.time("compromissoHrInicial", compromisso.getCompromissoInicial().format('H:i') , "Hora Inicial", "hora smallinput periodo"),
                            "<br/>",
                            "à",
                            "<br/>",
                            forms.date("compromissoDtFinal", compromisso.getCompromissoFinal().format('d/m/Y') , "Data Final", "date periodo"), 
                            forms.time("compromissoHrFinal", compromisso.getCompromissoFinal().format('H:i') , "Hora Final", "hora smallinput periodo"),
                          ]|join 
                    )
                }}              
                
                {{ forms.field("Local:", forms.text("local", compromisso.getLocal(), "Local", null, null, null, 150) ) }}
                
                {{ forms.field("Participantes:", forms.textarea("participantes", compromisso.getParticipantes(), "Participantes", null, 5) ) }}
                
                {{ forms.field("Observações:", forms.textarea("observacoes", compromisso.getObservacoes(), "Observações", null, 5, null, 500) ) }}
                
                {{ forms.field("Agendas:", forms.selectMultiple("agendas", agendas, compromisso.getAgendasDirecao.toArray, "Agendas", 10) ) }}
                
                {{ forms.hidden("id", compromisso.getId()) }}
                {{ forms.break([buttons.submit(), buttons.iconButton("Cancelar", "javascript:history.back()", "no_icon")]|join, true) }}

            </form>
        </div>


    </div><!--contentwrapper-->

    <br clear="all" />

</div><!-- centercontent -->