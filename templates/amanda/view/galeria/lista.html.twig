{% import "fields.html.twig" as fields %}
{% import "table.html.twig" as tables %}
{% import "buttons.html.twig" as buttons %}

<div class="centercontent">

    <div class="pageheader notab">
        <h1 class="pagetitle">{{titlePage}}</h1>
        {{ permissoes['GALER_INSERIR'] ? buttons.iconButton("Inserir novo", "galeria/form", "no_icon", "green") : ""}}
        <br clear="all">
    </div><!--pageheader-->

    <div id="contentwrapper" class="contentwrapper">
        <div class="subcontent">
            {{ tables.table(
                            [
                            tables.head([
                                            tables.columnHeader(fields.checkboxHeader()),
                                            tables.columnHeader([
                                                                permissoes['GALER_PUBLI'] ? buttons.iconButton("Publicar", "javascript:alterarStatus(1)", "no_icon publicar") : "",
                                                                permissoes['GALER_NOPUBLI'] ? buttons.iconButton("NÃ£o publicar", "javascript:alterarStatus(0)", "no_icon despublicar") : "",
