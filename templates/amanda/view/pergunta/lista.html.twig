{% import "fields.html.twig" as fields %}
{% import "table.html.twig" as tables %}
{% import "buttons.html.twig" as buttons %}
<div class="centercontent">

    <div class="pageheader notab">
        <h1 class="pagetitle">{{titlePage}}</h1>
        {{ permissoes['PERGU_INSERIR'] ? buttons.iconButton("Inserir novo", "pergunta/form", "no_icon", "green") : ""}}
        <br clear="all">
    </div><!--pageheader-->

    <div id="contentwrapper" class="contentwrapper">

        <div class="subcontent">
            {{ tables.table(
                            [
                            tables.head([
                                            tables.columnHeader(fields.checkboxHeader()),
                                            tables.columnHeader([
                                                                permissoes['PERGU_PUBLI'] ? buttons.iconButton("Publicar", "javascript:alterarStatus(1)", "no_icon") : "",
                                                                permissoes['PERGU_NOPUBLI'] ? buttons.iconButton("NÃ£o publicar", "javascript:alterarStatus(0)", "no_icon") : "",
                                                                permissoes['PERGU_EXCLUIR'] ? buttons.iconButton("Excluir", "javascript:excluir()", "no_icon") : "",
                                                                permissoes['PERGU_ALTPOS'] ? buttons.iconButton("Salvar posicionamento", "javascript:salvarPosicionamentoPergunta()", "no_icon") : "",
                                                                "&nbsp;&nbsp;&nbsp;&nbsp; Data ", 
                                                                fields.date("data_inicial", "", "", ""),
                                                                "&nbsp;&nbsp;", 
                                                                fields.date("data_final", "", "", ""), "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;",
                                            ]|join, "90%"),
                                            tables.columnHeader(fields.select("categoriasFiltro", categorias, "", "Todas as Categorias"), "10%")
                                        ])
                            ]|join,
                    "perguntas") }}

        </div>

    </div><!--contentwrapper-->

    <br clear="all" />

</div>