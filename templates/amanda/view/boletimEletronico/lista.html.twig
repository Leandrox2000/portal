{% import "fields.html.twig" as fields %}
{% import "table.html.twig" as tables %}
{% import "buttons.html.twig" as buttons %}
<div class="centercontent">

    <div class="pageheader notab">
        <h1 class="pagetitle">{{ titlePage }}</h1>
        {{ permissoes['BOLELET_INSERIR'] ? buttons.iconButton("Inserir novo", "boletimEletronico/form", "no_icon", "green") : "" }}
        <br clear="all">
    </div><!--pageheader-->

    <div id="contentwrapper" class="contentwrapper">
        <div class="subcontent">
            {{ tables.table(
                            [
                            tables.head([
                                            tables.columnHeader(fields.checkboxHeader()),
                                            tables.columnHeader([
                                                                permissoes['BOLELET_PUBLI'] ? buttons.iconButton("Publicar", "javascript:alterarStatus(1)", "no_icon publicar") : "",
                                                                permissoes['BOLELET_NOPUBLI'] ? buttons.iconButton("NÃ£o publicar", "javascript:alterarStatus(0)", "no_icon despublicar") : "",
                                                                permissoes['BOLELET_EXCLUIR'] ? buttons.iconButton("Excluir", "javascript:excluir()", "no_icon deletebutton") : "",
                                                                "&nbsp;&nbsp;&nbsp;&nbsp; Data ", 
                                                                fields.date("data_inicial", "", "", ""),
                                                                "&nbsp;&nbsp;", 
                                                                fields.date("data_final", "", "", ""),
                                                                fields.select("anos", anos, "", "Todos os anos")
                                                            ]|join, "80%"),
                                            tables.columnHeader(fields.select("status", status, "", "Todos os status"), "10%")
                                        ])
                            ]|join,
                    "boletimeletronico") }}

        </div>
    </div><!--contentwrapper-->

    <br clear="all" />

</div>