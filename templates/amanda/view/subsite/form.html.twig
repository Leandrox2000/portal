{% import "fields.html.twig" as forms %}
{% import "tabs.html.twig" as tabs %}
{% import "buttons.html.twig" as buttons %}



<div class="centercontent">
                
    <div class="pageheader notab">
        <h1 class="pagetitle">{{ titlePage }}</h1>
    </div><!--pageheader-->

    <div id="contentwrapper" class="contentwrapper">

        <div class="subcontent">
            <form id="frm" class="stdform stdform2" action="subsite/salvar" method="{{ method }}"  >
                {{ forms.field("Data e Hora Cadastro/Publicação:", [
                        forms.date("data_inicial", subsite.getDataInicial() ? subsite.getDataInicial().format('d/m/Y') : data.format('d/m/Y') , "Data Inicial", "date periodo"), 
                        forms.time("hora_inicial", subsite.getDataInicial() ? subsite.getDataInicial().format('H:i') : data.format('H:i'), "Hora inicial", "hora smallinput periodo")
                 ] | join ) }}
                {{ forms.field("Data e Hora Despublicação:", [
                        forms.date("data_final", subsite.getDataFinal().format('d/m/Y') , "Período final", "date periodo"), 
                        forms.time("hora_final", subsite.getDataFinal().format('H:i') , "Hora final", "hora smallinput periodo")
                 ] | join ) }}
                {{ forms.field("Nome", forms.text("nome", subsite.getNome(), "Nome") ) }}
                {{ forms.field("Sigla", forms.text("sigla", subsite.getSigla(), "Sigla") ) }}
                {{ forms.field("Titulo", forms.text("titulo", subsite.getTitulo(), "Titulo") ) }}
                {{ forms.field("Descrição", forms.richText("descricao", subsite.getDescricao(), "Descrição", "", "10", "", 300) ) }}
                                
                {{ forms.field("Funcionalidades", [
                    "<div style='text-align:right;margin:3px;width:590px;'><label>BannerSlider (Fixo por padrão)</label></div>",
                    forms.selectMultipleAdd("funcionalidade", funcionalidades, funcionalidadesMarcadas, "")
                ] | join) }}
                
                
                {{ forms.field("Facebook", forms.text("facebook", subsite.getFacebook(), "Facebook") ) }}
                {{ forms.field("Twitter", forms.text("twitter", subsite.getTwitter(), "Twitter") ) }}
                {{ forms.field("Flickr", forms.text("flickr", subsite.getFlickr(), "Flickr") ) }}
                {{ forms.field("YouTube", forms.text("youtube", subsite.getYoutube(), "YouTube") ) }}
                {{ forms.hidden("id", subsite.getId()) }}
                {{ forms.break([buttons.submit(), buttons.iconButton("Cancelar", "javascript:history.back()", "no_icon")]|join, true) }}
            </form>
        </div>


    </div><!--contentwrapper-->

    <br clear="all" />
</div><!-- centercontent -->