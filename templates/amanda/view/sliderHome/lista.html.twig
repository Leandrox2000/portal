{% import "fields.html.twig" as fields %}
{% import "table.html.twig" as tables %}
{% import "buttons.html.twig" as buttons %}

<div class="centercontent">

    <div class="pageheader notab">
        <h1 class="pagetitle">{{titlePage}}</h1>
        {{ permissoes['DESTSUB_INSERIR'] ? buttons.iconButton("Inserir novo", "sliderHome/form", "no_icon", "green") : "" }}
        <br clear="all">
    </div><!--pageheader-->

    <div id="contentwrapper" class="contentwrapper">
        <div class="subcontent">
            {{ tables.table(
                            [
                            tables.head([
                                            tables.columnHeader(fields.checkboxHeader()),
                                            tables.columnHeader([
                                                                permissoes['DESTSUB_PUBLI'] ?   buttons.iconButton("Publicar", "javascript:alterarStatus(1)", "no_icon publicar") : "",
                                                                permissoes['DESTSUB_NOPUBLI'] ? buttons.iconButton("NÃ£o publicar", "javascript:alterarStatus(0)", "no_icon despublicar") : "",
                                                                permissoes['DESTSUB_EXCLUIR'] ? buttons.iconButton("Excluir", "javascript:excluir()", "no_icon deletebutton") : "",
                                                                permissoes['DESTSUB_ALTPOS'] ? buttons.iconButton("Salva Posicionamento", "javascript:salvarPosicionamento()", "no_icon deletebutton") : "",
                                                                "&nbsp;&nbsp;&nbsp;&nbsp; Data ", 
                                                                fields.date("data_inicial", "", "", ""),
                                                                "&nbsp;&nbsp;", 
                                                                fields.date("data_final", "", "", ""),
                                                                fields.select("site", sites, "", "Todos os Sites"),
                                                            ]|join, "70%"),
                                            tables.columnHeader(),
                                            tables.columnHeader(fields.select("status", status, "", "Todos os status")),
                                            tables.columnHeader()
                                        ]),
                            ]|join,
                    "sliderHome") }}

        </div>
    </div><!--contentwrapper-->

    <br clear="all" />

</div>